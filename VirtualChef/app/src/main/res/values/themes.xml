<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VirtualChef" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!-- USE -->
        <item name="colorPrimary">@color/Lavender</item>
        <item name="colorPrimaryVariant">@color/Lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- App crash fix-->
        <item name="windowNoTitle">true</item>>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Applied the animation import from RES/ANIM-->
    <style name="DialogAnimation">
        <item name ="android:windowEnterAnimation">@anim/slide_in</item>
        <item name ="android:windowExitAnimation">@anim/slide_out</item>
    </style>


    <!-- FOR THE LIGHT MODE-->
    <style name="ScreenBackGround">
        <item name= "android:background">@color/white</item>
    </style>

    <style name="CardBackGround">
        <item name= "android:background">@color/white</item>
    </style>
    <style name="TextColor">
        <item name= "android:textColor">@color/Lavender</item>
    </style>

    <style name="ToolBar">
        <item name= "android:background">@color/Lavender</item>
    </style>

    <style name="SuggestR">
        <item name= "android:backgroundTint">@color/white</item>
        <item name= "android:tint">@color/Lavender</item>
    </style>

    <style name="HeaderTitle">
        <item name= "android:textColor">@color/black</item>
        <!--item name= "android:background">@color/Lavender</item-->
    </style>

    <!--style name="ImageChange"><item name= "android:src">@color/black</item>></style-->


</resources>